<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />


    <com.davidinchina.showcode.readingview.readview.ReadingView
        android:id="@+id/readView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/rx_8"
        app:atv_lineSpacingExtra="2dp"
        app:atv_marginAndPaddingOfLeftRight="16dp"
        app:atv_marginAndPaddingOfTopDown="@dimen/vertical_height"
        app:atv_textColor="@color/textColor">

    </com.davidinchina.showcode.readingview.readview.ReadingView>

</LinearLayout>
